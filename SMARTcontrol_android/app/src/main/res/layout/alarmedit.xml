<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:http="http://schemas.android.com/apk/res-auto"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/alarmedit"
    android:background="#fff">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/timeview"
        android:textSize="70sp"
        android:layout_marginTop="20dp"
        android:text="12:12"
        style="?android:attr/borderlessButtonStyle"
        android:padding="0dp"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:gravity="left|center_vertical" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/dateview"
        android:textSize="27sp"
        android:layout_below="@+id/alarmeditdate"
        android:text="12. December 2015"
        style="?android:attr/borderlessButtonStyle"
        android:padding="0dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:gravity="left|center_vertical" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/playlistview"
        android:textSize="27sp"
        android:layout_below="@+id/alarmeditplaylist"
        android:layout_marginBottom="5dp"
        android:text="nobody cares"
        style="?android:attr/borderlessButtonStyle"
        android:padding="0dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:gravity="left|center_vertical" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/commandview"
        android:textSize="27sp"
        android:layout_below="@+id/alarmeditcmd"
        android:text="high-217-222-227"
        style="?android:attr/borderlessButtonStyle"
        android:padding="0dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:gravity="left|center_vertical" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Date"
        android:id="@+id/alarmeditdate"
        android:layout_below="@+id/timeview"
        android:layout_alignLeft="@+id/timeview"
        android:layout_marginTop="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Command"
        android:id="@+id/alarmeditcmd"
        android:layout_below="@+id/dateview"
        android:layout_alignLeft="@+id/dateview"
        android:layout_marginTop="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Playlist"
        android:id="@+id/alarmeditplaylist"
        android:layout_below="@+id/commandview"
        android:layout_alignLeft="@+id/playlistview"
        android:layout_marginTop="5dp"/>


    <View style="@style/Divider"
        android:layout_alignParentLeft="true"
        android:layout_alignBottom="@+id/timeview" />

</RelativeLayout>