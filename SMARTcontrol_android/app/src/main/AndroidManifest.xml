<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="dk.lasse_it.smartcontrol">
    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="dk.lasse_it.smartcontrol.Light"
            android:label="@string/light"/>
        <activity
            android:name="dk.lasse_it.smartcontrol.Settings"
            android:label="@string/light"/>
        <activity
            android:name="dk.lasse_it.smartcontrol.Alarmview"
            android:label="@string/light"/>
        <activity
            android:name="dk.lasse_it.smartcontrol.Musicplayer"
            android:label="@string/light"
            android:theme="@style/abtheme"/>
        <activity
            android:name="dk.lasse_it.smartcontrol.Musicqueue"
            android:label="@string/light"
            android:theme="@style/abtheme"/>
        <activity
            android:name="dk.lasse_it.smartcontrol.Musicbrowse"
            android:label="@string/light"
            android:theme="@style/abtheme"/>
        <activity
            android:name="dk.lasse_it.smartcontrol.Main"
            android:label="@string/app_name" >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
    <uses-permission android:name="android.permission.INTERNET" />
</manifest>